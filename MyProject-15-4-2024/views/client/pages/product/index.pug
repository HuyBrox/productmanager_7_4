extends ../../layout/default.pug
include ../../mixins/box-head.pug
//- th pug này phải viết cho đúng chứ k là lỗi ngay
block main
    .container.my-3
        .row
            .col-12
                +box-head('Danh sách sản phẩm')

        .row
            each item in products
                .col-4.mb-3
                    .product-item
                        .inner-image
                            img(src=item.thumbnail alt=item.title width="100%" height="100%")
                        .inner-content
                            h3.inner-title
                                a(href=`/product/${item.slug}`) #{item.title}
                            .inner-price-new #{(item.price-(item.price*(item.discountPercentage/100))).toFixed(2)} vnđ
                            .inner-price-old #{item.price} vnđ
                            .inner-discount -#{item.discountPercentage}%

